{
	"name": "vscode-velocity",
	"displayName": "Apache Velocity language support",
	"description": "Velocity template language extension",
	"icon": "assets/Apache-Velocity-Logo.png",
	"author": "Quidgest",
	"license": "MIT",
	"version": "1.0.6",
	"repository": {
		"type": "git",
		"url": "https://github.com/quidgest/vscode-velocity"
	},
	"publisher": "Quidgest",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"multi-root ready",
		"velocity",
		"language server"
	],
	"engines": {
		"vscode": "^1.86.0",
		"node": "^16.14"
	},
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Velocity lsp",
			"properties": {
				"languageServerVelocity.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerVelocity.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"configurationDefaults": {
			"[velocity]": {
			  "editor.semanticHighlighting.enabled": true
			}
		},
		"languages": [
			{
				"id": "velocity",
				"extensions": [
					".vm",
					".vt"
				],
				"aliases": [
					"Velocity",
					"velocity"
				],
				"icon": {
					"light": "./assets/velocity_file_icon.png",
					"dark": "./assets/velocity_file_icon.png"
				},
				"configuration": "./language-configuration.json"
			}
		],

		"grammars": [
			{
				"language": "velocity",
				"scopeName": "text.velocity",
				"path": "./syntaxes/Velocity.tmGrammar.json"
			}
		],
		"snippets": [
			{
				"language": "velocity",
				"path": "./snippets/velocity.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "cd server && npm run build && cd ../client && npm run build",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "cd server && npm run test && cd ../client && npm run test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.11.25",
		"@vscode/test-cli": "^0.0.6",
		"@vscode/test-electron": "^2.3.9",
		"esbuild": "^0.20.1",
		"mocha": "^10.3.0",
		"typescript": "^5.4.2"
	}
}
