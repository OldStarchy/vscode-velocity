{
	"comments": {
		"lineComment": "##",
		"blockComment": [ "#*", "*#" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "{", "close": "}" },
		{ "open": "[", "close": "]" },
		{ "open": "(", "close": ")" },
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] },
		{ "open": "\"", "close": "\"", "notIn": ["string"] },
	  ],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["'", "'"],
		["\"", "\""]
	  ],
	"folding": {
		"markers": {
		  "start": "\\#(?:(?:macro|if|foreach)\\b\\s*\\(|\\{(?:macro|if|foreach)\\b\\s*\\().*(?!\\#\\{?end).*$",
		  "end": "\\#end\\b|\\#\\{end"
		}
	},
}